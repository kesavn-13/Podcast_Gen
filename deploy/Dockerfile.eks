# AI Research Podcast Generator - Hackathon EKS Deployment
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    ffmpeg \
    libespeak1 \
    libasound2 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better layer caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional packages for NVIDIA NIM
RUN pip install --no-cache-dir \
    openai==2.6.1 \
    sentence-transformers \
    gtts \
    pydub

# Copy the application
COPY app/ ./app/
COPY backend/ ./backend/
COPY scripts/ ./scripts/
COPY samples/ ./samples/

# Create main application file for EKS
COPY deploy/main_eks.py ./

# Set environment variables
ENV PYTHONPATH=/app
ENV HACKATHON_MODE=true
ENV USE_NVIDIA_NIM=true

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application
CMD ["python", "main_eks.py"]