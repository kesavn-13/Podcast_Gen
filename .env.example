# Environment Configuration for Mock-First Development
# Copy to .env and configure for your setup

# ============================================================================
# DEVELOPMENT MODE (Mock-First)
# ============================================================================

# Development Settings
USE_MOCK_SERVICES=true
DEBUG=true
ENVIRONMENT=development

# Local Development
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ============================================================================
# MOCK CONFIGURATIONS (Active During Development)
# ============================================================================

# Local RAG Settings
RAG_BACKEND=faiss  # Options: faiss, memory
LOCAL_EMBEDDINGS=sentence-transformers/all-mpnet-base-v2
CHUNK_SIZE=800
CHUNK_OVERLAP=100

# Mock Response Settings  
MOCK_RESPONSE_DELAY=2.0  # Simulate API latency
MOCK_DETERMINISTIC=true  # Consistent responses for testing
MOCK_DATA_PATH=samples/mocks/

# Local TTS Settings
TTS_BACKEND=local  # Options: local, polly
LOCAL_TTS_ENGINE=pyttsx3  # Simple text-to-speech for testing
AUDIO_OUTPUT_DIR=temp/audio/

# ============================================================================
# AWS CREDENTIALS (For Future Deployment - HACKATHON REQUIREMENTS)
# ============================================================================

# NVIDIA NIM Configuration (Set when credits available)
NVIDIA_NIM_ENDPOINT=your-sagemaker-endpoint-url
NVIDIA_API_KEY=your-nvidia-api-key
NVIDIA_ORG_ID=your-nvidia-org-id

# Specific model endpoints (will be deployed on SageMaker)
LLAMA_NEMOTRON_ENDPOINT=llama-3-1-nemotron-nano-8b-endpoint
RETRIEVAL_NIM_ENDPOINT=retrieval-embedding-nim-endpoint

# ============================================================================
# AWS CONFIGURATION
# ============================================================================

# AWS Credentials (use AWS CLI or IAM roles in production)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# SageMaker Configuration
SAGEMAKER_EXECUTION_ROLE=arn:aws:iam::123456789012:role/SageMakerExecutionRole
SAGEMAKER_INSTANCE_TYPE=ml.g4dn.xlarge

# OpenSearch Serverless
OPENSEARCH_ENDPOINT=https://your-collection.us-east-1.aoss.amazonaws.com
OPENSEARCH_INDEX_NAME=paper-podcast-index
OPENSEARCH_FACTS_INDEX=facts-index
OPENSEARCH_STYLE_INDEX=style-index

# S3 Configuration
S3_BUCKET_NAME=paper-podcast-storage
S3_PAPERS_PREFIX=papers/
S3_AUDIO_PREFIX=audio/
S3_TRANSCRIPTS_PREFIX=transcripts/

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# FastAPI Settings
DEBUG=true
API_VERSION=v1
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8501"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE"]

# ============================================================================
# PROCESSING CONFIGURATION
# ============================================================================

# PDF Processing
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100

# Audio Generation
DEFAULT_VOICE_1=Joanna  # Amazon Polly voice for host 1
DEFAULT_VOICE_2=Matthew  # Amazon Polly voice for host 2
AUDIO_FORMAT=mp3
SAMPLE_RATE=22050
SILENCE_DURATION=0.5

# Episode Structure
DEFAULT_INTRO_DURATION=60    # seconds
DEFAULT_CORE_DURATION=300    # seconds
DEFAULT_OUTRO_DURATION=60    # seconds
MAX_TOTAL_DURATION=600       # seconds (10 minutes)

# ============================================================================
# COST CONTROLS (HACKATHON BUDGET MANAGEMENT)
# ============================================================================

# Budget Limits ($100 hackathon credits)
MAX_TOTAL_COST=95.00
COST_ALERT_THRESHOLD=80.00
MAX_PROCESSING_TIME=3600  # 1 hour max per paper

# Token Limits
MAX_TOKENS_PER_REQUEST=4000
MAX_TOTAL_TOKENS_PER_PAPER=50000

# Resource Management
AUTO_SHUTDOWN_ENDPOINTS=true
IDLE_TIMEOUT_MINUTES=15
MAX_CONCURRENT_JOBS=2

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Metrics Collection
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_PUSHGATEWAY=localhost:9091

# Error Tracking
SENTRY_DSN=your-sentry-dsn-url
ENVIRONMENT=development

# ============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# ============================================================================

# Redis Cache (for development)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Database (SQLite for development)
DATABASE_URL=sqlite:///./podcast_gen.db

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Testing Configuration
TEST_S3_BUCKET=paper-podcast-test
TEST_OPENSEARCH_INDEX=test-index
USE_MOCK_SERVICES=false

# Feature Flags
ENABLE_PLAIN_LANGUAGE_MODE=true
ENABLE_SEGMENT_REGENERATION=true
ENABLE_CITATION_TRACKING=true
ENABLE_COST_TRACKING=true

# Sample Data
SAMPLE_PAPERS_DIR=data/samples/papers
STYLE_BANK_PATH=data/style_bank/patterns.json

# ============================================================================
# UI CONFIGURATION
# ============================================================================

# Streamlit Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Next.js Settings (if using)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# ============================================================================
# SECURITY
# ============================================================================

# API Security
SECRET_KEY=your-super-secret-jwt-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Security
ALLOWED_EXTENSIONS=[".pdf"]
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
SCAN_UPLOADS=true

# ============================================================================
# HACKATHON DEMO CONFIGURATION
# ============================================================================

# Demo Settings
DEMO_MODE=true
DEMO_PAPER_PATH=data/samples/papers/sample_research_paper.pdf
DEMO_FAST_MODE=true  # Reduced processing for demo
DEMO_SHORT_SEGMENTS=true  # Shorter segments for quick demo

# Recording Settings
DEMO_VIDEO_LENGTH=180  # 3 minutes max
ENABLE_SCREEN_RECORDING=false
DEMO_STEP_DELAYS=2  # seconds between demo steps