# NVIDIA-AWS Hackathon Environment Configuration
# Copy this file to .env and update with your actual credentials

# NVIDIA NIM Configuration (HACKATHON PRIORITY)
NVIDIA_API_KEY=your_nvidia_api_key_here
NVIDIA_BASE_URL=https://integrate.api.nvidia.com/v1
NVIDIA_MODEL=nvidia/llama-3.1-nemotron-nano-8b-v1
USE_NVIDIA_NIM=true

# Disable other LLM providers for hackathon compliance
USE_GOOGLE_LLM=false
USE_LOCAL_LLM=false

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET=your_hackathon_bucket

# SageMaker Configuration
SAGEMAKER_ENDPOINT_NAME=your_sagemaker_endpoint
SAGEMAKER_ROLE_ARN=arn:aws:iam::123456789012:role/NVIDIANIMSageMakerRole

# Hackathon Specific Settings
HACKATHON_MODE=true
DEMO_MODE=true
PROJECT_NAME=AI_Research_Podcast_Agent

# API Configuration
MAX_TOKENS=4096
TEMPERATURE=0.7
TOP_P=0.9
TIMEOUT_SECONDS=300

# Audio Configuration
AUDIO_OUTPUT_DIR=temp/audio
AUDIO_FORMAT=mp3
SAMPLE_RATE=44100

# Logging
LOG_LEVEL=INFO
LOG_FILE=hackathon_app.log